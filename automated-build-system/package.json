    "joi": "^17.11.0",
    "uuid": "^9.0.1",
    "multer": "^1.4.5-lts.1",
    "archiver": "^6.0.1",
    "unzipper": "^0.10.14",
    "fs-extra": "^11.1.1",
    "node-cron": "^3.0.3",
    "bull": "^4.12.2",
    "redis": "^4.6.8",
    "mongoose": "^8.0.3",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "sharp": "^0.32.6",
    "handlebars": "^4.7.8",
    "yaml": "^2.3.4",
    "dockerode": "^4.0.0",
    "ws": "^8.14.2",
