{
  "name": "lulupay-automated-build-system",
  "version": "1.0.0",
  "description": "Automated white-label app generation system for LuluPay platform",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "docker:build": "docker build -t lulupay-build-system .",
    "docker:run": "docker run -p 8080:8080 lulupay-build-system",
    "setup": "npm install && npm run build"
  },
  "dependencies": {
    "express": "^4.18.2",
