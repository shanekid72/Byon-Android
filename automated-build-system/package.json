    "@types/archiver": "^6.0.2",
    "@types/fs-extra": "^11.0.4",
    "@types/node-cron": "^3.0.11",
    "@types/bull": "^4.10.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/ws": "^8.5.9",
    "typescript": "^5.2.2",
    "tsx": "^4.1.4",
    "jest": "^29.7.0",
