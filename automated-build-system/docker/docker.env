# LuluPay Docker Build Environment Configuration
# Environment variables for containerized Android builds

# ===== BUILD CONFIGURATION =====
BUILD_ENVIRONMENT=docker
BUILD_TIMEOUT=1800
MAX_CONCURRENT_BUILDS=2
BUILD_RETENTION_DAYS=30

# Android SDK Configuration
ANDROID_SDK_VERSION=34.0.0
ANDROID_BUILD_TOOLS_VERSION=34.0.0
GRADLE_VERSION=8.5
JAVA_VERSION=11

# ===== PERFORMANCE SETTINGS =====
BUILDER_CPU_LIMIT=4.0
BUILDER_MEMORY_LIMIT=8G
BUILDER_CPU_RESERVATION=2.0
BUILDER_MEMORY_RESERVATION=4G

# Gradle optimization
GRADLE_PARALLEL=true
GRADLE_CACHING=true
GRADLE_WORKERS_MAX=4
GRADLE_MAX_HEAP=4g
GRADLE_MIN_HEAP=1g

# ===== STORAGE CONFIGURATION =====
STORAGE_ROOT=/opt/lulupay/storage
BUILD_STORAGE_PATH=/opt/lulupay/storage/builds
CACHE_STORAGE_PATH=/opt/lulupay/storage/cache
KEYSTORE_STORAGE_PATH=/opt/lulupay/storage/keystores

# ===== DATABASE CONFIGURATION =====
MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_DATABASE=lulupay-builds
MONGODB_USERNAME=lulupay
MONGODB_PASSWORD=lulupay-mongo-secret

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=lulupay-redis-secret
REDIS_DATABASE=0

# ===== QUEUE CONFIGURATION =====
QUEUE_CONCURRENCY=2
QUEUE_MAX_RETRY_ATTEMPTS=3
QUEUE_RETRY_DELAY=30000
QUEUE_JOB_TIMEOUT=1800000

# ===== SECURITY CONFIGURATION =====
API_SECRET_KEY=lulupay-build-secret-key-2024
JWT_SECRET=lulupay-jwt-secret-2024
JWT_EXPIRATION=3600

# ===== NETWORKING CONFIGURATION =====
API_PORT=3000
WEBSOCKET_PORT=3001
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

DOCKER_NETWORK_SUBNET=172.20.0.0/16
CORS_ORIGIN=*

# ===== MONITORING CONFIGURATION =====
LOG_LEVEL=info
LOG_FORMAT=json
METRICS_ENABLED=true

# ===== PARTNER CONFIGURATION =====
DEFAULT_PARTNER_SDK_VERSION=1.0.0
DEFAULT_BUILD_TYPE=debug
DEFAULT_TARGET_SDK=34
DEFAULT_MIN_SDK=24

# Feature flags
ENABLE_BUILD_SIGNING=true
ENABLE_BUILD_OPTIMIZATION=true
ENABLE_PARALLEL_BUILDS=true
ENABLE_BUILD_CACHE=true
ENABLE_REAL_TIME_UPDATES=true

# ===== ENVIRONMENT SPECIFIC =====
NODE_ENV=production
ENVIRONMENT=docker
VERSION=1.0.0
SERVICE_NAME=lulupay-android-builder 