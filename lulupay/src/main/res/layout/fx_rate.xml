<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:orientation="vertical"
     android:id="@+id/fx_rate_container">

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:visibility="gone"
         android:layout_marginVertical="10dp"
         android:orientation="horizontal"
         android:id="@+id/cost_rate_container">

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="0dp"
             android:textSize="14sp"
             android:textColor="@color/gray"
             android:layout_weight="1"
             android:text="Cost rate" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:textSize="14sp"
             android:textColor="@color/black"
             android:id="@+id/cost_rate_value"
             android:text="" />

    </LinearLayout>

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:layout_marginVertical="10dp"
         android:orientation="horizontal"
         android:id="@+id/rate_container">

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="0dp"
             android:textSize="14sp"
             android:textColor="@color/gray"
             android:layout_weight="1"
             android:text="Rate" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:textSize="14sp"
             android:textColor="@color/black"
             android:id="@+id/rate_value"
             android:text="" />

    </LinearLayout>

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:layout_marginVertical="10dp"
         android:orientation="horizontal"
         android:id="@+id/base_currency_code_container">

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="0dp"
             android:textSize="14sp"
             android:textColor="@color/gray"
             android:layout_weight="1"
             android:text="Base Currency Code" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:textSize="14sp"
             android:textColor="@color/black"
             android:id="@+id/base_currency_code_value"
             android:text="" />

    </LinearLayout>

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:layout_marginVertical="10dp"
         android:orientation="horizontal"
         android:id="@+id/counter_currency_code_container">

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="0dp"
             android:textSize="14sp"
             android:textColor="@color/gray"
             android:layout_weight="1"
             android:text="Counter Currency Code" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:textSize="14sp"
             android:textColor="@color/black"
             android:id="@+id/counter_currency_code_value"
             android:text="" />

    </LinearLayout>

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:layout_marginVertical="10dp"
         android:orientation="horizontal"
         android:id="@+id/type_container">

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="0dp"
             android:textSize="14sp"
             android:textColor="@color/gray"
             android:layout_weight="1"
             android:text="Type" />

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:textSize="14sp"
             android:textColor="@color/black"
             android:id="@+id/type_value"
             android:text="" />

    </LinearLayout>

</LinearLayout>