<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:orientation="vertical"
     android:id="@+id/coordinator">

    <Spinner
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:background="@drawable/custom_edit_text"
         android:padding="12dp"
         android:layout_marginTop="8dp"
         android:id="@+id/receiver_mode">

    </Spinner>

    <Spinner
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:visibility="gone"
         android:background="@drawable/custom_edit_text"
         android:padding="12dp"
         android:layout_marginTop="8dp"
         android:id="@+id/receiver_acct_type">

    </Spinner>

    <EditText
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:visibility="gone"
         android:background="@drawable/custom_edit_text"
         android:hint="Iban"
         android:padding="12dp"
         android:layout_marginTop="8dp"
         android:inputType="text"
         android:id="@+id/receiver_iban" />

    <EditText
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:visibility="gone"
         android:background="@drawable/custom_edit_text"
         android:hint="Account Number"
         android:padding="12dp"
         android:layout_marginTop="8dp"
         android:inputType="number"
         android:id="@+id/receiver_acct_no" />

    <EditText
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:visibility="gone"
         android:background="@drawable/custom_edit_text"
         android:hint="Routing Code"
         android:padding="12dp"
         android:enabled="false"
         android:layout_marginTop="8dp"
         android:inputType="text"
         android:id="@+id/receiver_routing_code" />

    <EditText
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:visibility="gone"
         android:background="@drawable/custom_edit_text"
         android:hint="Bic/Swift Code"
         android:padding="12dp"
         android:enabled="false"
         android:layout_marginTop="8dp"
         android:inputType="text"
         android:id="@+id/receiver_iso_code" />

    <Button
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:padding="18dp"
         android:textSize="16sp"
         android:textColor="@android:color/white"
         android:layout_marginTop="24dp"
         android:layout_alignEnd="@+id/passwordLayout"
         android:layout_marginBottom="34dp"
         android:layout_below="@id/passwordLayout"
         android:background="@drawable/custom_button_back"
         android:layout_alignParentStart="true"
         android:id="@+id/get_details_btn"
         android:text="Validate Account Details" />

</LinearLayout>