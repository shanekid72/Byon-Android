<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_height="wrap_content"
     android:layout_width="match_parent"
    android:foreground="?android:attr/selectableItemBackground" 
    android:background="?android:attr/selectableItemBackgroundBorderless"
     android:padding="16dp">

    <androidx.appcompat.widget.AppCompatTextView
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:layout_marginBottom="8dp"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         android:id="@+id/bank_name_label"
         android:text="Bank Name:"
         android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatTextView
         android:layout_height="wrap_content"
         android:layout_width="0dp"
         app:layout_constraintTop_toTopOf="@id/bank_name_label"
         app:layout_constraintStart_toEndOf="@id/bank_name_label"
         app:layout_constraintEnd_toEndOf="parent"
         android:layout_marginStart="8dp"
         android:id="@+id/bank_name_value"
         android:text="Sample Bank Name" />

    <androidx.appcompat.widget.AppCompatTextView
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:layout_marginBottom="8dp"
         app:layout_constraintStart_toStartOf="parent"
         android:layout_marginTop="16dp"
         app:layout_constraintTop_toBottomOf="@id/bank_name_label"
         android:id="@+id/routing_code_label"
         android:text="Routing Code:"
         android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatTextView
         android:layout_height="wrap_content"
         android:layout_width="0dp"
         app:layout_constraintTop_toTopOf="@id/routing_code_label"
         app:layout_constraintStart_toEndOf="@id/routing_code_label"
         app:layout_constraintEnd_toEndOf="parent"
         android:layout_marginStart="8dp"
         android:id="@+id/routing_code_value"
         android:text="123456" />

    <androidx.appcompat.widget.AppCompatTextView
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:layout_marginBottom="8dp"
         app:layout_constraintStart_toStartOf="parent"
         android:layout_marginTop="16dp"
         app:layout_constraintTop_toBottomOf="@id/routing_code_label"
         android:id="@+id/bic_swift_label"
         android:text="BIC/Swift Code:"
         android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatTextView
         android:layout_height="wrap_content"
         android:layout_width="0dp"
         app:layout_constraintTop_toTopOf="@id/bic_swift_label"
         app:layout_constraintStart_toEndOf="@id/bic_swift_label"
         app:layout_constraintEnd_toEndOf="parent"
         android:layout_marginStart="8dp"
         android:id="@+id/bic_swift_value"
         android:text="SWIFT123" />

    <androidx.appcompat.widget.AppCompatTextView
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:layout_marginBottom="8dp"
         app:layout_constraintStart_toStartOf="parent"
         android:layout_marginTop="16dp"
         app:layout_constraintTop_toBottomOf="@id/bic_swift_label"
         android:id="@+id/sort_code_label"
         android:text="Sort Code:"
         android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatTextView
         android:layout_height="wrap_content"
         android:layout_width="0dp"
         app:layout_constraintTop_toTopOf="@id/sort_code_label"
         app:layout_constraintStart_toEndOf="@id/sort_code_label"
         app:layout_constraintEnd_toEndOf="parent"
         android:layout_marginStart="8dp"
         android:id="@+id/sort_code_value"
         android:text="123-456" />

    <androidx.appcompat.widget.AppCompatTextView
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:layout_marginBottom="8dp"
         app:layout_constraintStart_toStartOf="parent"
         android:layout_marginTop="16dp"
         app:layout_constraintTop_toBottomOf="@id/sort_code_label"
         android:id="@+id/address_label"
         android:text="Address:"
         android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatTextView
         android:layout_height="wrap_content"
         android:layout_width="0dp"
         app:layout_constraintTop_toTopOf="@id/address_label"
         app:layout_constraintStart_toEndOf="@id/address_label"
         app:layout_constraintEnd_toEndOf="parent"
         android:layout_marginStart="8dp"
         android:id="@+id/address_value"
         android:text="123 Main Street" />

    <androidx.appcompat.widget.AppCompatTextView
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:layout_marginBottom="8dp"
         app:layout_constraintStart_toStartOf="parent"
         android:layout_marginTop="16dp"
         app:layout_constraintTop_toBottomOf="@id/address_label"
         android:id="@+id/town_name_label"
         android:text="Town Name:"
         android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatTextView
         android:layout_height="wrap_content"
         android:layout_width="0dp"
         app:layout_constraintTop_toTopOf="@id/town_name_label"
         app:layout_constraintStart_toEndOf="@id/town_name_label"
         app:layout_constraintEnd_toEndOf="parent"
         android:layout_marginStart="8dp"
         android:id="@+id/town_name_value"
         android:text="Springfield" />

    <androidx.appcompat.widget.AppCompatTextView
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:layout_marginBottom="8dp"
         app:layout_constraintStart_toStartOf="parent"
         android:layout_marginTop="16dp"
         app:layout_constraintTop_toBottomOf="@id/town_name_label"
         android:id="@+id/country_subdivision_label"
         android:text="Country Subdivision:"
         android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatTextView
         android:layout_height="wrap_content"
         android:layout_width="0dp"
         app:layout_constraintTop_toTopOf="@id/country_subdivision_label"
         app:layout_constraintStart_toEndOf="@id/country_subdivision_label"
         app:layout_constraintEnd_toEndOf="parent"
         android:layout_marginStart="8dp"
         android:id="@+id/country_subdivision_value"
         android:text="California" />

</androidx.constraintlayout.widget.ConstraintLayout>