<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewReceipient">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Receiver Details Header -->
            <TextView
                android:id="@+id/receiverDetailsHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Receiver Details"
                android:textSize="22sp"
                android:textStyle="bold"
                android:paddingTop="16dp"
                android:paddingBottom="8dp" />

            <!-- Receiver First Name -->
            <EditText
                android:id="@+id/receiver_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Receiver First Name"
                android:inputType="text"
                android:padding="12dp"
                android:background="@drawable/custom_edit_text" />

            <!-- Receiver Middle Name -->
            <EditText
                android:id="@+id/receiver_middle_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Receiver Middle Name"
                android:inputType="text"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_edit_text" />

            <!-- Receiver Last Name -->
            <EditText
                android:id="@+id/receiver_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Receiver Last Name"
                android:inputType="text"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_edit_text" />

            <!-- Receiver Phone Number -->
            <EditText
                android:id="@+id/receiver_phone_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Receiver Phone Number"
                android:inputType="phone"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_edit_text" />

            <!-- Nationality/Country Spinner -->
            <Spinner
                android:id="@+id/receiver_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_edit_text"
                android:padding="12dp" />
            <Spinner
                android:id="@+id/receiver_mode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_edit_text"
                android:padding="12dp" />

            <Spinner
                android:id="@+id/receiver_acct_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                android:background="@drawable/custom_edit_text"
                android:padding="12dp" />

            <EditText
                android:id="@+id/receiver_iban"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Iban"
                android:inputType="text"
                android:padding="12dp"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_edit_text" />

            <!-- Account Number -->
            <EditText
                android:id="@+id/receiver_acct_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Account Number"
                android:inputType="number"
                android:padding="12dp"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_edit_text" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_search1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Search Banks"
                android:textSize="16sp"
                android:visibility="gone"
                android:textColor="@android:color/white"
                android:backgroundTint="@color/button_color"
                app:cornerRadius="8dp"
                app:icon="@drawable/icn_search"
                app:iconPadding="8dp"
    app:iconGravity="textStart" />
            
            <EditText
                android:id="@+id/receiver_routing_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Routing Code"
                android:enabled="false"
                android:visibility="gone"
                android:inputType="text"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_edit_text" />
            
            <EditText
                android:id="@+id/receiver_iso_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Bic/Swift Code"
                android:inputType="text"
                android:padding="12dp"
                android:enabled="true"
                android:layout_marginTop="8dp"
                android:background="@drawable/custom_edit_text" />
            
                <EditText
                    android:id="@+id/receiver_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Address"
                    android:inputType="text"
                    android:padding="12dp"
                android:visibility="gone"
                android:enabled="false"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/custom_edit_text" />

                <EditText
                    android:id="@+id/receiver_town_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Town Name"
                    android:inputType="text"
                    android:visibility="gone"
                    android:padding="12dp"
                    android:enabled="false"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/custom_edit_text" />

                <EditText
                    android:id="@+id/receiver_country_subdivision"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Country Subdivision"
                    android:inputType="text"
                    android:padding="12dp"
                    android:visibility="gone"
                    android:enabled="false"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/custom_edit_text" />


                <!-- Transaction Details Header -->
                <TextView
                    android:id="@+id/transactionDetailsHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transaction Details"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:paddingTop="16dp"
                    android:paddingBottom="8dp" />

                <Spinner
                    android:id="@+id/instrument"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone"
                    android:background="@drawable/custom_edit_text"
                    android:padding="12dp" />

                <!-- Select Purpose Spinner
                <Spinner
                    android:id="@+id/select_purpose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:background="@drawable/custom_edit_text"
                    android:padding="12dp" />

                    Payment Mode Spinner 
                <Spinner
                    android:id="@+id/payment_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    android:background="@drawable/custom_edit_text"
                    android:padding="12dp" />

                   Source of Income Spinner 
                <Spinner
                    android:id="@+id/source_of_income"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone"
                    android:background="@drawable/custom_edit_text"
                    android:padding="12dp" /> -->

                <Spinner
                    android:id="@+id/correspondent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone"
                    android:background="@drawable/custom_edit_text"
                    android:padding="12dp" /> 
                <Button
                    android:id="@+id/get_details_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/passwordLayout"
                    android:layout_alignEnd="@+id/passwordLayout"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="34dp"
                    android:background="@drawable/custom_button_back"
                    android:padding="18dp"
                    android:text="Validate Account Details"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />


        </LinearLayout>
    </ScrollView>

    <include
        layout="@layout/bottom_sheet_lookups"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        app:behavior_skipCollapsed="true"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    />
</androidx.coordinatorlayout.widget.CoordinatorLayout>
